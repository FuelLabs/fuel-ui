{
  "name": "@fuel-ui/design-system",
  "version": "0.0.1",
  "private": true,
  "description": "Fuel Design System",
  "author": "Fuel Labs <contact@fuel-ui.sh> (https://fuel.network/)",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "homepage": "https://github.com/FuelLabs/fuel-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FuelLabs/fuel-ui.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/FuelLabs/fuel-ui/issues"
  },
  "workspaces": [
    "./common/*",
    "./design-system/*"
  ],
  "scripts": {
    "postinstall": "pnpm build && pnpm test",
    "build": "turbo run build",
    "build:storybook": "pnpm --filter=\"@fuel-ui/react\" -r build:storybook",
    "build:watch": "pnpm -r --filter './design-system/*' --parallel build --watch",
    "changeset": "changeset",
    "changeset:release": "changeset publish --no-git-tag",
    "changeset:version": "changeset version",
    "changeset:check": "changeset status --since=master",
    "dev": "turbo run dev --parallel",
    "deps:update": "updates -gu && pnpm -r exec updates -gu",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm lint:check --fix",
    "lint": "run-s lint:check prettier:check",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "test:coverage": "turbo run test -- --coverage",
    "test:clear": "turbo run test -- --clearCache",
    "ts:check": "pnpm -r exec tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.4",
    "@changesets/get-github-info": "^0.5.1",
    "@jest/types": "^29.0.2",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "@types/react-dom": "^18.0.6",
    "@types/react": "^18.0.18",
    "depcheck": "^1.4.3",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "turbo": "^1.4.5",
    "typescript": "^4.8.2",
    "updates": "^13.1.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    },
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim@<0.0.3": ">=0.0.3",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "terser@>=5.0.0 <5.14.2": ">=5.14.2",
      "terser@<4.8.1": ">=4.8.1"
    }
  }
}
